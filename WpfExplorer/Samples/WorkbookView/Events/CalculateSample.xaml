<src:SGUserControl x:Class="WPFExplorer.Samples.WorkbookView.Events.CalculateSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFExplorer.Samples.WorkbookView.Events"
             xmlns:sg="clr-namespace:SpreadsheetGear.Windows.Controls;assembly=SpreadsheetGear.Windows.Wpf"
             xmlns:src="clr-namespace:WPFExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Calculate Time" Margin="10,10,10,0" Click="buttonCalculate_Click" />
            <Label Content="Current Time:" Margin="10,20,10,0" />
            <TextBox x:Name="textBox" Margin="10,5,10,0" />
        </StackPanel>
        <src:WpfWorkbookView x:Name="workbookView" Grid.Column="1" Calculate="workbookView_Calculate" />
    </Grid>
</src:SGUserControl>

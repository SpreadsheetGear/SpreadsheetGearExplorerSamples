<src:SampleUserControl x:Class="WPFExplorer.Samples.DataGrid.SpreadsheetToDataGridFormattedSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFExplorer.Samples.DataGrid"
             xmlns:src="clr-namespace:WPFExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Run Sample" Margin="10,15,10,0" Click="ButtonRunSample_Click" />
        </StackPanel>
        <DataGrid x:Name="dataGrid" Grid.Column="1" />
    </Grid>
</src:SampleUserControl>

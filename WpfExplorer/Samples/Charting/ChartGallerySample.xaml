<src:SampleUserControl x:Class="WPFExplorer.Samples.Charting.ChartGallerySample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFExplorer.Samples.Charting"
             xmlns:src="clr-namespace:WPFExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Category:" FontWeight="Bold" Margin="10,5,5,0" Grid.Row="0" Grid.Column="0" />
        <Label Content="Options:" FontWeight="Bold" Margin="10,5,5,0" Grid.Row="0" Grid.Column="1" />
        <Label Content="Image Generated by SpreadsheetGear:" FontWeight="Bold" Margin="10,5,5,0" Grid.Row="0" Grid.Column="2" />
        <ListBox Name="listBoxCategory" Width="100" Height="230" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionMode="Single" Margin="5,2,5,5" Grid.Row="1" Grid.Column="0" SelectionChanged="listBoxCategory_SelectionChanged" />
        <ListBox Name="listBoxType" Width="160" Height="230" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionMode="Single" Margin="0,2,5,5" Grid.Row="1" Grid.Column="1" SelectionChanged="listBoxType_SelectionChanged" />
        <Image Name="imageControl" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,2,5,5" Grid.Row="1" Grid.Column="2" />
    </Grid>
</src:SampleUserControl>

<src:SampleUserControl x:Class="WPFExplorer.Samples.Advanced.ThreadingSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFExplorer.Samples.Advanced"
             xmlns:sg="clr-namespace:SpreadsheetGear.Windows.Controls;assembly=SpreadsheetGear.Windows.Wpf"
             xmlns:src="clr-namespace:WPFExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Add Thread" Margin="10,10,10,0" VerticalAlignment="Top" Click="ButtonAddThread_Click" />
            <Button Content="Remove Thread" Margin="10,5,10,0" VerticalAlignment="Top" Click="ButtonRemoveThread_Click" />
        </StackPanel>
        <src:WpfWorkbookView x:Name="workbookView" Grid.Column="1" />
    </Grid>
</src:SampleUserControl>
